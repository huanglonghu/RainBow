<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>


    </data>


    <RelativeLayout
        android:layout_width="150pt"
        android:layout_height="150pt">


        <ImageView
            android:id="@+id/ivvr"
            android:layout_width="150pt"
            android:layout_height="150pt"
