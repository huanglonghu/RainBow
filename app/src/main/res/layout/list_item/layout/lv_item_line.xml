<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="bean"
            type="com.example.rainbow.bean.GetJobDetailResponse.DataBean.ShopsBean" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingTop="20pt"
        android:paddingBottom="20pt">


        <ImageView
            android:layout_width="140pt"
            android:layout_height="140pt" />


        <LinearLayout
            android:layout_width="836pt"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{bean.shopName}"
                android:textColor="@color/t3"
                android:textSize="33pt" />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20pt"
                android:text="地址 : 广州市天河区天河北路689号"
                android:textColor="@color/t4"
                android:textSize="26pt" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="15pt"
                android:text="电话 : 020-29815931"
                android:textColor="@color/t4"
                android:textSize="28pt" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape_a1"
            android:gravity="center"
            android:paddingLeft="28pt"
            android:paddingTop="16pt"
            android:paddingRight="28pt"
            android:paddingBottom="16pt">


            <ImageView
                android:layout_width="62pt"
                android:layout_height="44pt"
                android:src="@drawable/line" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15pt"
                android:text="路线"
                android:textColor="@color/t5"
                android:textSize="28pt" />


        </LinearLayout>


        <ImageView
            android:layout_width="42pt"
            android:layout_height="42pt"
            android:layout_marginLeft="205pt"
            android:src="@drawable/back1" />


    </LinearLayout>

</layout>

