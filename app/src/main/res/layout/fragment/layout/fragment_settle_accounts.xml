<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="30pt">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180pt"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="260pt"
                        android:layout_height="match_parent"
                        android:background="@color/b2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="53pt"
                            android:layout_height="53pt"
                            android:src="@drawable/jsje" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20pt"
                            android:text="总盈亏"
                            android:textColor="#fff"
                            android:textSize="31pt" />


                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/d1"
                        android:gravity="center_vertical"
                        android:paddingLeft="30pt"
                        android:text="+55555555"
                        android:textColor="@color/b2"
                        android:textSize="39pt" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="366pt"
                    android:layout_marginTop="20pt"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="260pt"
                        android:layout_height="match_parent"
                        android:background="@color/c3"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="53pt"
                            android:layout_height="53pt"
                            android:src="@drawable/gzbx" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20pt"
                            android:text="工作报销"
                            android:textColor="#fff"
                            android:textSize="31pt" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/d1"
                        android:divider="@drawable/ll_divider1"
                        android:orientation="vertical"
                        android:paddingLeft="20pt"
                        android:paddingRight="20pt"
                        android:showDividers="middle">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="住宿费 :"
                                android:textSize="29pt" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="杂物费 :"
                                android:textSize="29pt" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="总赔钱 :"
                                android:textSize="29pt" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null" />


                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal">


                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="总扣钱 :"
                                android:textSize="29pt" />

                            <EditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@null" />


                        </LinearLayout>


                    </LinearLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="186pt"
                    android:layout_marginTop="20pt"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="260pt"
                        android:layout_height="match_parent"
                        android:background="@color/c2"
                        android:gravity="center"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="53pt"
                            android:layout_height="53pt"
                            android:src="@drawable/ssje" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="20pt"
                            android:text="实收金额"
                            android:textColor="#fff"
                            android:textSize="31pt" />


                    </LinearLayout>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/d1"
                        android:gravity="center_vertical"
                        android:paddingLeft="30pt"
                        android:text="+55555555"
                        android:textColor="@color/c2"
                        android:textSize="39pt" />


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24pt"
                android:layout_weight="1"
                android:orientation="vertical">


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="180pt"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:background="@drawable/shape_a2"
                        android:divider="@drawable/ll_divider2"
                        android:padding="1pt"
                        android:showDividers="middle">


                        <TextView
                            android:layout_width="140pt"
                            android:layout_height="match_parent"
                            android:background="@color/d1"
                            android:gravity="center"
                            android:text="纸钞 :"
                            android:textColor="@color/t6"
                            android:textSize="27pt" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center"
                            android:textColor="@color/t6"
                            android:textSize="27pt" />


                        <TextView
                            android:layout_width="140pt"
                            android:layout_height="match_parent"
                            android:background="@color/d1"
                            android:gravity="center"
                            android:text="铜板 :"
                            android:textColor="@color/t6"
                            android:textSize="27pt" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center"
                            android:textColor="@color/t6"
                            android:textSize="27pt" />


                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_marginTop="20pt"
                        android:layout_weight="1"
                        android:background="@drawable/shape_a2"
                        android:divider="@drawable/ll_divider2"
                        android:padding="1pt"
                        android:showDividers="middle">


                        <TextView
                            android:layout_width="140pt"
                            android:layout_height="match_parent"
                            android:background="@color/d1"
                            android:gravity="center"
                            android:text="备注 :"
                            android:textColor="@color/t6"
                            android:textSize="27pt" />

                        <EditText
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:background="@null"
                            android:gravity="center"
                            android:textColor="@color/t6"
                            android:textSize="27pt" />


                    </LinearLayout>


                </LinearLayout>



                <com.example.rainbow.ui.customView.LinePathView
                    android:id="@+id/signArea"
                    android:layout_width="match_parent"
                    android:layout_height="500pt"
                    android:layout_marginTop="20pt"
                    android:background="@drawable/shape_a3"
                    android:padding="1pt" />

                <TextView
                    android:id="@+id/clear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10pt"
                    android:background="@drawable/shape_b1"
                    android:gravity="center"
                    android:paddingLeft="30pt"
                    android:paddingTop="10pt"
                    android:paddingRight="30pt"
                    android:paddingBottom="10pt"
                    android:text="清除"
                    android:textColor="@android:color/white"

                    />


            </LinearLayout>


        </LinearLayout>

        <TextView
            android:id="@+id/commit"
            android:layout_width="match_parent"
            android:layout_height="90pt"
            android:layout_marginLeft="30pt"
            android:layout_marginTop="20pt"
            android:layout_marginRight="30pt"
            android:layout_marginBottom="20pt"
            android:background="@drawable/shape_a4"
            android:gravity="center"
            android:text="确定提交"
            android:textColor="#fff"
            android:textSize="32pt" />

    </LinearLayout>


</layout>
