<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="wxzn"
            type="com.example.rainbow.ui.main.Wxzn" />

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="90pt"
            android:background="@color/d1"
            android:paddingLeft="60pt"
            android:paddingRight="40pt">


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="35pt"
                    android:layout_height="36pt"
                    android:src="@drawable/location" />


                <TextView
                    android:id="@+id/title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20pt"
                    android:text="@string/wxzn"
                    android:textColor="@color/t9"
                    android:textSize="31pt" />

            </LinearLayout>

            <ImageView
                android:id="@+id/back"
                android:layout_width="54pt"
                android:layout_height="42pt"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:onClick="@{()->wxzn.back()}"
                android:src="@drawable/back2" />


        </RelativeLayout>




        <FrameLayout
            android:id="@+id/wxzn_container"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />


    </LinearLayout>
</layout>