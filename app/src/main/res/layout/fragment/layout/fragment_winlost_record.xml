<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:paddingLeft="30pt"
            android:paddingTop="24pt"
            android:paddingRight="30pt"
            android:paddingBottom="30pt">


            <Spinner
                android:id="@+id/spMachine"
                android:layout_width="0dp"
                android:layout_height="68pt"
                android:layout_weight="1"
                android:background="@drawable/shape_a1"
                android:gravity="center_vertical"
                android:hint="请选择机器"
                android:dropDownVerticalOffset="70pt"
                android:textColorHint="@color/d2"
                android:textSize="30pt" />


            <EditText
                android:id="@+id/etXf"
                android:layout_width="0dp"
                android:layout_height="68pt"
                android:layout_marginLeft="20pt"
                android:layout_weight="1"
                android:background="@drawable/shape_a1"
                android:hint="输入本店总洗分"
                android:paddingLeft="20pt"
                android:inputType="number"
                android:textColorHint="@color/d2"
                android:textSize="30pt" />


            <TextView
                android:id="@+id/commit"
                android:layout_width="0dp"
                android:layout_height="68pt"
                android:layout_marginLeft="20pt"
                android:layout_weight="1"
                android:background="@drawable/shape_a4"
                android:gravity="center"
                android:paddingLeft="20pt"
                android:text="提交"
                android:textColor="@android:color/white"
                android:textSize="30pt" />


        </LinearLayout>


        <View
            android:layout_width="match_parent"
            android:layout_height="12pt"
            android:background="@color/d1" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="30pt"
            android:paddingTop="45pt"
            android:paddingRight="30pt"
            android:paddingBottom="29pt">


            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="录入日期"
                android:textColor="@color/t9"
                android:textSize="26pt" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="机器"
                android:textColor="@color/t9"
                android:textSize="26pt" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="亏损金额"
                android:textColor="@color/t9"
                android:textSize="26pt" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="洗分"
                android:textColor="@color/t9"
                android:textSize="26pt" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="录入人"
                android:textColor="@color/t9"
                android:textSize="26pt" />


        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="2pt"
            android:background="@color/d2" />

        <ListView
            android:id="@+id/lv_winlost"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingRight="30pt"
            android:paddingLeft="30pt"
            android:divider="@drawable/lv_divider1" />


    </LinearLayout>
</layout>
